<%- include('header'); -%>

        <div class="box" id="heading">
        <h1><%= toDay %> </h1>
    </div>

        <div class="box" >
    
            <% newItems.forEach(function(item) { %>
            <form action="/delete" method="POST">
                <div class="item">
                    <input type="checkbox" name="check" value=<%= item._id %> onChange="this.form.submit()">
                      <p> <%= item.name %> </p>  
                     </div>
                     <input type="hidden" name="listName" value=<%= toDay %> ></input>
            </form>
                  <%  }) %>   
                
                 
                 
                 <form class="item" action="/" method="POST">
                    <input type="text" name="newItem" placeholder="New Task">
                    <button type="submit" name="list_name" value=<%= toDay %> >+</button>
                </form>
        </div>

<%- include('footer'); -%>
        
    